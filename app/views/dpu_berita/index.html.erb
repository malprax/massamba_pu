<div class="wrap">
  <%= render "shared/navigation" %>
  <div class="container">
    <% @dpu_berita.order("created_at desc") do |dpu_berita| %>
        <%= dpu_berita.content %>
    <% end %>
    <h3>Berita Dinas Pekerjaan Umum</h3>
    
    <h4><%#= @dpu_berita.title%></h4>
    <p><%#=  @dpu_berita.content.recent%></p>  
 
    <table class="table">
      <thead>
        <tr>
          <th>Judul</th>        
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @dpu_berita.each do |dpu_beritum| %>
          <tr>
            <td><%= link_to dpu_beritum.title, dpu_beritum %></td>      
            <td><%= link_to 'Edit', edit_dpu_beritum_path(dpu_beritum) %></td>
            <td><%= link_to 'Destroy', dpu_beritum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Buat Berita DPU', new_dpu_beritum_path %>
  </div>
</div>

