<h3>Ubah Password Anda</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, honeypot: true }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Password Baru" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, "Konfirmasi Password Baru" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Ubah Password", class:'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
